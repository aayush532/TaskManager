<div class="container">
  <p style="color: green"><%= notice %></p>
  <h1>Tasks</h1>

  <div class="row">
    <% @tasks.each do |task| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%= render task %>
            <p>
              <%= link_to "Show this task", task, class: "btn btn-primary" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New task", new_task_path, class: "btn btn-success mt-4" %>
</div>
